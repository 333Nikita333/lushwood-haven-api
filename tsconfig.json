{
  "compilerOptions": {
    "declaration": true,
    "allowJs": false,
    "removeComments": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": ["ES2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    // "baseUrl": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2021"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}